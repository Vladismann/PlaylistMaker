<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:paddingHorizontal">@dimen/default_margin</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CustomSwitchStyle" parent="SettingsTextView">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="ToolbarPageTittle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ToolbarMainPage" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackText">
        <item name="android:textColor">@color/trackAdditionalText</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/search_button_background</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>